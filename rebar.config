%% -*- mode: erlang -*-
{ erl_opts
, [ debug_info
  , strict_validation
  , warn_export_vars
  , warn_exported_vars
  , warn_missing_spec
  , warnings_as_errors
  ]
}.

{ plugins
, [{tqformat, "0.1.2"}
  ]
}.

{ tqformat
, [ { files
    , ["src/*.{erl,hrl,app.src}", "test/*.erl", "rebar.config"]
    }
  , {width, 96}
  ]
}.

{deps, []}.